<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Code</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.code %></td>
        <td><%= course.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
