<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <aside class="col-md-4">
    <section class="user_enrollment_info">
      <h1> Enrolled Courses </h1>
      <table>
        <thead>
          <tr>
            <th>Course</th>
            <th>Code</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.name %></td>
              <td><%= course.code %></td>
              <td><%= link_to "Unenroll", unenroll_path(:course_id => course.id), :method => :put %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </aside>

</div>
